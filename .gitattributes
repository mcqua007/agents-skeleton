# Auto-detect text files and normalize line endings
* text=auto

# Markdown is always text
*.md text eol=lf

# Shell scripts are always text
*.sh text eol=lf

# Config files
*.json text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Prevent binary files from being diffed
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
